@model myfinance_web_netcore.Models.PlanoContas

@{
    ViewData["Title"] = "Detalhes do Plano de Contas";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-action="Index">Plano de Contas</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">Detalhes</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-info-circle"></i> Detalhes do Plano de Contas</h2>
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-list-alt"></i> Informações do Plano de Contas
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <th scope="row" class="text-muted">
                                            @Html.DisplayNameFor(model => model.Codigo):
                                        </th>
                                        <td>
                                            <span class="badge bg-primary fs-6">@Html.DisplayFor(model => model.Codigo)</span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row" class="text-muted">
                                            @Html.DisplayNameFor(model => model.Descricao):
                                        </th>
                                        <td>
                                            <strong>@Html.DisplayFor(model => model.Descricao)</strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row" class="text-muted">
                                            @Html.DisplayNameFor(model => model.Tipo):
                                        </th>
                                        <td>
                                            @if (Model.Tipo == myfinance_web_netcore.Models.TipoPlanoContas.Receita)
                                            {
                                                <span class="badge bg-success fs-6">
                                                    <i class="fas fa-arrow-up"></i> Receita
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger fs-6">
                                                    <i class="fas fa-arrow-down"></i> Despesa
                                                </span>
                                            }
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row" class="text-muted">
                                            @Html.DisplayNameFor(model => model.DataCriacao):
                                        </th>
                                        <td>
                                            @Model.DataCriacao.ToString("dd/MM/yyyy 'às' HH:mm")
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="fas fa-chart-line"></i> Resumo
                                    </h6>
                                    <p class="card-text">
                                        Este plano de contas é do tipo <strong>@Model.TipoDescricao</strong> e foi criado em 
                                        <strong>@Model.DataCriacao.ToString("dd/MM/yyyy")</strong>.
                                    </p>
                                    <p class="card-text">
                                        <small class="text-muted">
                                            Use este código (<strong>@Model.Codigo</strong>) ao registrar transações 
                                            relacionadas a <strong>@Model.Descricao</strong>.
                                        </small>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Card de Ações -->
            <div class="card mt-4">
                <div class="card-body">
                    <h6 class="card-title">
                        <i class="fas fa-cogs"></i> Ações Disponíveis
                    </h6>
                    <div class="d-flex gap-2 flex-wrap">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Editar este Plano de Contas
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Excluir este Plano de Contas
                        </a>
                        <a asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus"></i> Criar Novo Plano de Contas
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-list"></i> Ver Todos os Planos de Contas
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
}
